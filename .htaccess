Options +FollowSymLinks
RewriteEngine On

# ✅ Permitir archivos PHP normalmente
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# ✅ Permitir carpetas normalmente
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# ✅ Permitir archivos estáticos
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|svg|ico|webp|woff|woff2|ttf|eot|pdf|txt)$ [NC]
RewriteRule ^ - [L]


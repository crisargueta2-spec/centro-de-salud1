# Habilitar reescritura de URLs
Options +FollowSymLinks
RewriteEngine On

# Establecer base de reescritura (ra칤z del proyecto)
RewriteBase /

# Archivo principal
DirectoryIndex index.php

# 游 Permitir acceso directo a archivos est치ticos (CSS, JS, im치genes, fuentes, etc.)
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|svg|ico|webp|woff|woff2|ttf|eot|pdf|txt)$ [NC]
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# 游대 Redirigir todas las dem치s peticiones din치micas a index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [L,QSA]
